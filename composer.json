{
	"name": "sinyor/marketplace/hepsiburada",
	"description": "Hepsiburada için hazırlanmış pazaryeri entegrasyonu.",
	"keywords": ["hepsiburada", "pazaryeri", "e-ticaret", "e-commerce", "marketplace"],
	"homepage": "https://github.com/yorulmazsinan/hepsiburada-laravel-api",
	"license": "MIT",
	"authors": [
		{
			"name": "Sinan Yorulmaz",
			"email": "info@sinanyorulmaz.com"
		}
	],
	"require": {
		"php": ">=8.0",
		"ext-SimpleXML": "*",
		"ext-dom": "*",
		"ext-json": "*",
		"ext-openssl": "*",
		"php-http/discovery": "^1.14",
		"psr/http-client-implementation": "*",
		"psr/log": "^1.1 || ^2.0 || ^3.0",
		"symfony/http-foundation": "^5.0 || ^6.0",
		"symfony/serializer": "^5.0 || ^6.0"
	},
	"require-dev": {
		"laravel/pint": "^1.6",
		"escapestudios/symfony2-coding-standard": "^3.11",
		"monolog/monolog": "^2.8",
		"php-http/curl-client": "^2.2",
		"phpstan/phpstan": "^1.9",
		"phpstan/phpstan-strict-rules": "^1.4",
		"phpunit/phpunit": "^8.5",
		"rector/rector": "^0.15.12",
		"slim/psr7": "^1.4",
		"squizlabs/php_codesniffer": "^3.5",
		"symfony/var-dumper": "^5.1"
	},
	"autoload": {
		"psr-4": {
			"SinyorHepsiburada\\": "src/"
		},
		"files": [
			"src\\Helpers.php"
		]
	},
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"test": "./vendor/bin/phpunit",
		"test-coverage": "./vendor/bin/phpunit --coverage-html coverage",
		"project-clean-code": [
			"./vendor/bin/pint"
		]
	}
}
